server {
    listen 80;
    server_name vibes.ryanjpeterson.dev;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name vibes.ryanjpeterson.dev;

    # SSL Certificates (Certbot managed)
    ssl_certificate /etc/letsencrypt/live/vibes.ryanjpeterson.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/vibes.ryanjpeterson.dev/privkey.pem;

    # Standard SSL settings...
    # (Keep your existing SSL settings here)

    # Allow large file uploads
    client_max_body_size 100M;

    # 1. Strapi Uploads (Serving Images)
    location /uploads/ {
        proxy_pass http://localhost:1337/uploads/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # 2. Strapi API
    location /api/ {
        proxy_pass http://localhost:1337/api/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # 3. Strapi Admin & Plugins
    # Added explicit /upload handling here
    location ~ ^/(admin|content-manager|content-type-builder|upload|users-permissions|i18n) {
        proxy_pass http://localhost:1337;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # 4. Next.js Frontend (Default)
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}